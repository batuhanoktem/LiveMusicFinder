@model IEnumerable<LiveMusicFinder.Models.LiveShow>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ArtistSortParam"]">@Html.DisplayNameFor(model => model.Artist)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["VenueSortParam"]">@Html.DisplayNameFor(model => model.Venue)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ShowDateSortParam"]">@Html.DisplayNameFor(model => model.ShowDate)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EnteredBySortParam"]">@Html.DisplayNameFor(model => model.EnteredBy)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnteredBy)
            </td>
            <td>
            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            @if (User.Identity.IsAuthenticated)
            {
                <span> |</span>
                @if (item.EnteredBy == User.Identity.Name)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><span> |</span>
                }
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            }
            </td>
        </tr>
    }
    </tbody>
</table>
